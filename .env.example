# Environment
NODE_ENV=development

# API Server
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000

# UI Server
UI_PORT=5173
UI_HOST=localhost

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./data

# S3 Storage (when STORAGE_TYPE=s3)
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_ENDPOINT=

# Image Processing
MAX_IMAGE_SIZE_MB=50
MAX_MEGAPIXELS=100
MAX_CONCURRENT_JOBS=4
PROCESSING_TIMEOUT_MS=30000
ALLOW_UPSAMPLING=false

# Cache
CACHE_ENABLED=true
CACHE_MAX_SIZE_MB=1000
CACHE_TTL_SECONDS=2592000

# Security
CORS_ALLOWED_ORIGINS=http://localhost:5173
URL_INGEST_ENABLED=true
URL_INGEST_ALLOWED_DOMAINS=
SSRF_PROTECTION_ENABLED=true

# Database (for Phase 3)
# DB_TYPE=sqlite
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=imageapp
# DB_USER=
# DB_PASSWORD=

# Observability
LOG_LEVEL=info
METRICS_ENABLED=true
TRACING_ENABLED=false

# Webhooks (for Phase 3)
# WEBHOOK_SECRET=
